{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Serverless Offline",
            "program": "${workspaceRoot}/node_modules/serverless/bin/serverless.js",
            "args": [
                "invoke",
                "local",
                "-f",
                "tokens",
                "--data",
                "{}",
                "-s",
                "prod"
            ],
            "autoAttachChildProcesses": true
        }
    ]
}